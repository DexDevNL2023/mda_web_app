{
  "name": "mda",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "ng serve",
    "clean:reports": "node cypress/support/node_fs/removeDir.js",
    "create:reports": "node cypress/support/node_fs/createDir.js",
    "archive-report": "node cypress/support/node_fs/archiveReport.js",
    "generate-report": "marge cypress/reports/current-report.json --reportDir cypress/reports --reportFilename current-report.html --inlineAssets",
    "cy:run": "cypress run --browser chrome",
    "pretest": "npm-run-all clean:reports create:reports",
    "start-and-test": "npm-run-all --parallel cy:run",
    "test": "npm-run-all archive-report pretest start-and-test generate-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/common": "^20.2.1",
    "@angular/core": "^20.2.1",
    "@angular/platform-browser-dynamic": "^20.2.1",
    "@badeball/cypress-cucumber-preprocessor": "^23.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "cypress": "^15.0.0",
    "esbuild": "^0.25.9",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "npm-run-all": "^4.1.5"
  }
}
